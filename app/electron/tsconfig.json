{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "types": ["node"],
    "lib": ["es2020"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*", "../src/db.ts"],
  "exclude": ["../src/**/*.tsx", "../src/**/*.css"]
}
