{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "../dist/electron",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "types": ["node"],
    "lib": ["es2020", "dom"],
		"skipLibCheck": true
  },
  "include": ["."]
}
